    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Text extract test",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sc3tools",
                    "--package=sc3tools"
                ],
                "filter": {
                    "name": "sc3tools",
                    "kind": "bin"
                }
            },
            "args": [
                "extract-text",
                "C:\\Program Files (x86)\\Steam\\steamapps\\common\\STEINS;GATE 0\\USRDIR\\script\\*.scx",
                "sg0zhs"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Text replace test",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sc3tools",
                    "--package=sc3tools"
                ],
                "filter": {
                    "name": "sc3tools",
                    "kind": "bin"
                }
            },
            "args": [
                "replace-text",
                "C:\\Program Files (x86)\\Steam\\steamapps\\common\\STEINS;GATE 0\\USRDIR\\script\\0x66*.scx",
                "C:\\Program Files (x86)\\Steam\\steamapps\\common\\STEINS;GATE 0\\USRDIR\\script\\txt\\0x66*.txt",
                "sg0zhs"
            ],
            "cwd": "${workspaceFolder}"
        },        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'sc3tools'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=sc3tools",
                    "--package=sc3tools"
                ],
                "filter": {
                    "name": "sc3tools",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}